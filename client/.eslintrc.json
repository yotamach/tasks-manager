{
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "plugins": ["import"],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "jsx": true
    },
    "globals": {
      "exampleGlobalVariable": true
    },
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "no-unused-vars": "warn",
        "no-eval": "warn",
        "import/first": "error",
        "react/prop-types": "warn"
    }
}